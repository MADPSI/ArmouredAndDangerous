<mod displayName="Armoured &amp; Dangerous" unique="PSI-501_StellarisArmourMod" description="Armoured &amp; Dangerous adds a number of parts made from Stellaris ship models to almost every editor." installerSystemVersion="1.0.1.0" hasCustomInstaller="true" dllsBuild="2.5.20">
	<prerequisite game="GalacticAdventures">!PSI-501_ArmouredDangerous_v1-0-0.package</prerequisite>
	<component unique="StellarisArmour_AC" displayName="Outfit Parts" imagePlacement="Before" description="Adds the parts to all Outfitters, including the Captain Editor." game="GalacticAdventures" defaultChecked="false">!PSI-501_ArmouredDangerous_v1-0-0_ac.package</component>
	<component unique="StellarisArmour_BE" displayName="Building Parts" imagePlacement="Before" description="Adds the parts to all variations of the Building Editor, as both placeable Structures and Details." game="GalacticAdventures" defaultChecked="false">!PSI-501_ArmouredDangerous_v1-0-0_be.package</component>
	<component unique="StellarisArmour_C2C" displayName="Early Creature Parts" imagePlacement="Before" description="Adds the parts to the Early Creature Creator accessed when starting the Creature Stage." game="GalacticAdventures" defaultChecked="false">!PSI-501_ArmouredDangerous_v1-0-0_c2c.package</component>
	<component unique="StellarisArmour_CE" displayName="Creature Parts" imagePlacement="Before" description="Adds the parts to the Creature Editor." game="GalacticAdventures" defaultChecked="true">!PSI-501_ArmouredDangerous_v1-0-0_ce.package</component>
	<component unique="StellarisArmour_CL" displayName="Cell Parts" imagePlacement="Before" description="Adds the parts to the Cell Editor accessed from the Sporepedia and from command line, and to the Starting Cell Editor that comes with Project Bacterioid. Parts are not unlockable within Cell Stage" game="GalacticAdventures" defaultChecked="false">!PSI-501_ArmouredDangerous_v1-0-0_cl.package</component>
	<component unique="StellarisArmour_SE" displayName="Adventure Props" imagePlacement="Before" description="Adds the parts as Fixed Objects to the Adventure Editor." game="GalacticAdventures" defaultChecked="false">!PSI-501_ArmouredDangerous_v1-0-0_se.package</component>
	<component unique="StellarisArmour_VE" displayName="Vehicle Parts" imagePlacement="Before" description="Adds the parts to all variations of the Vehicle Editor, as both placeable Chassis and Details." game="GalacticAdventures" defaultChecked="false">!PSI-501_ArmouredDangerous_v1-0-0_ve.package</component>
	<remove game="GalacticAdventures">*PSI-501*</remove>
	<remove game="GalacticAdventures">*PSI_501*</remove>
</mod>